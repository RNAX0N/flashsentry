[Desktop Entry]
Type=Application
Name=FlashSentry
GenericName=USB Security Monitor
Comment=Monitor and verify USB flash drives through cryptographic hashing
Exec=flashsentry %U
Icon=flashsentry
Terminal=false
Categories=System;Security;Utility;
Keywords=USB;flash;drive;security;hash;verify;monitor;whitelist;
StartupNotify=true
StartupWMClass=FlashSentry

# Actions for right-click menu
Actions=minimized;settings;

[Desktop Action minimized]
Name=Start Minimized
Exec=flashsentry --minimized

[Desktop Action settings]
Name=Open Settings
Exec=flashsentry --settings

